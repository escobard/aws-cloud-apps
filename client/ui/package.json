{
  "name": "ui",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test-watch": "jest --watch",
    "docker:build": "docker build --build-arg NEXT_PUBLIC_GRAPHQL_API -t escobard/ui:latest -f docker/Dockerfile .",
    "docker:start": "docker run --name ui -p 3000:3000 -t escobard/ui:latest",
    "docker": "npm run docker:build && npm run docker:start"
  },
  "dependencies": {
    "@apollo/client": "^3.8.8",
    "@apollo/react-hooks": "^4.0.0",
    "axios": "^1.6.2",
    "graphql": "^16.8.1",
    "graphql-tag": "^2.12.6",
    "next": "14.0.3",
    "react": "^18",
    "react-dom": "^18",
    "semantic-ui-react": "^2.1.4"
  },
  "devDependencies": {
    "@testing-library/react": "^14.1.2",
    "@testing-library/react-hooks": "^8.0.1",
    "eslint": "^8",
    "eslint-config-next": "14.0.3",
    "jest": "^29.7.0",
    "sass": "^1.69.5"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!<rootDir>/node_modules/",
      "!<rootDir>/public",
      "!<rootDir>/.next"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,ts,tsx}",
      "<rootDir>/src/**/*.{spec,test}.{js,jsx,ts,tsx}"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "node"
    ],
    "coverageReporters": [
      "text"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
